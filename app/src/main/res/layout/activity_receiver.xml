<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sender"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue4"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.bulsu.quickeyshare.activity.SenderActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="Enter Code"
        android:textSize="18sp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/etCode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_rounded_blue_normal"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="@color/textColorLight"
        android:textColorHint="#e1e1e1"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnConnect"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_rounded_blue_invert_selector"
        android:text="Connect"
        android:textAllCaps="false"
        android:textColor="#fff" />

    <LinearLayout
        android:id="@+id/layoutShareStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rounded_blue_selected"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="File Transfer Started"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tvTimeLapsed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="00:00"
            android:textColor="#fff"
            android:textSize="32sp" />

    </LinearLayout>


</LinearLayout>
