<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bulsu.quickeyshare">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.FileChooserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SenderActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ReceiverActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.LockitActivity" />
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AboutActivity" />
        <activity android:name=".activity.HelpActivity" />
        <activity android:name=".activity.NReceiverActivity" />
        <activity android:name=".activity.ProfileActivity" />
        <activity android:name=".activity.NSenderActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ReviewFilesActivity" />
        <activity android:name=".activity.LockChooserActivity" />
        <activity android:name=".activity.NominatePinActivity" />
        <activity android:name=".activity.PinActivity" />
        <activity android:name=".activity.ReceiveFilesActivity" />
        <activity android:name=".activity.ImagePreviewActivity"></activity>
    </application>

</manifest>